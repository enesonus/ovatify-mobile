    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="550dp"
    android:background="@drawable/upload_bottom"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/choose_file"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/Song_edittext"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="35dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Search"
            android:textColor="@color/home_ek2_color"
            android:textSize="19sp" />

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/search"></RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="340dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/spotify_list_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/spotify1"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/spotify1photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
                android:src="@drawable/unsplash_zcqjx2_z4sm_ek2" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/spotify1album"
                    android:layout_width="210dp"
                    android:layout_height="16.1dp"
                    android:layout_marginTop="34dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp">

                </TextView>


                <TextView
                    android:id="@+id/spotify1name"
                    android:layout_width="210.1dp"
                    android:layout_height="16.1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="0dp"
                    android:text="@string/sanctuary_in_dying_light_string"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/spotify1artist"
                    android:layout_width="210.1dp"
                    android:layout_height="16.1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="17dp"
                    android:text="@string/the_luna_sequence_string"
                    android:textColor="@color/home_ek2_color"
                    android:textSize="11sp" />

            </RelativeLayout>
        </RelativeLayout>

