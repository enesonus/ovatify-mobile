<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/dark_brown"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/song1_photo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:contentDescription="song_photo"
        android:src="@drawable/unsplash_zcqjx2_z4sm_ek1"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/song_name1"
        android:layout_width="match_parent"
        android:layout_height="16.1dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/_1989__taylor_s_version__ek1_string"
        android:textColor="@color/home_ek2_color"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/song1_photo" />

    <TextView
        android:id="@+id/song1_artist"
        android:layout_width="match_parent"
        android:layout_height="16.1dp"
        android:layout_gravity="center_horizontal|center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/album___taylor_swift_ek1_string"
        android:textColor="@color/home_ek2_color"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/song_name1" />

</androidx.constraintlayout.widget.ConstraintLayout>

