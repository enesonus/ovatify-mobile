<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_bg__mobile_dashboard_ek2_color"
    >


    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="70.25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:clipToOutline="true"
        android:background="#0D0909"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/Music_info_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:text="Music Info"
            android:textColor="@color/home_ek2_color"
            android:textSize="24dp" />

        <RelativeLayout
            android:id="@+id/group_2049"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp">


            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:src="@drawable/icon"></ImageView>


        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Edit_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Edit_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:text="Edit"
            android:textColor="@color/home_ek2_color"
            android:textSize="20sp"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/music2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/music2photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
            android:src="@drawable/unsplash_zcqjx2_z4sm_ek2" />

        <TextView
            android:id="@+id/musicname"
            android:layout_width="290.1dp"
            android:layout_height="45.1dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="220dp"
            android:backgroundTint="@android:color/transparent"
            android:text="Sanctuary In Dying Light"
            android:textColor="@color/home_ek2_color"
            android:textSize="19sp" />

        <RelativeLayout
            android:id="@+id/music2info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="260dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/musicartist"
                android:layout_width="280.1dp"
                android:layout_height="40.1dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Artist: The Luna Sequence"
                android:textColor="@color/home_ek2_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/musicalbum"
                android:layout_width="280.1dp"
                android:layout_height="40.1dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Album:"
                android:textColor="@color/home_ek2_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/musicyear"
                android:layout_width="280.1dp"
                android:layout_height="40.1dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Year: 2005"
                android:textColor="@color/home_ek2_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/musicgenres"
                android:layout_width="280.1dp"
                android:layout_height="40.1dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="120dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Genres: Pop, Rock"
                android:textColor="@color/home_ek2_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/musicInstruments"
                android:layout_width="280.1dp"
                android:layout_height="40.1dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="160dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Instruments: Guitar"
                android:textColor="@color/home_ek2_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/musicMood"
                android:layout_width="280.1dp"
                android:layout_height="40.1dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Mood: Chill"
                android:textColor="@color/home_ek2_color"
                android:textSize="15sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/suggest_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggest to  a Friend"
            android:layout_marginLeft="230dp"
            android:background="@drawable/button_outline"/>
    </RelativeLayout>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="86dp"
        android:isIndicator="true"
        android:stepSize="1.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music2" />

    <Button
        android:id="@+id/remove_button_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/save_cancel_bckgrnd"
        android:text="Remove"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancel_button_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/save_cancel_bckgrnd"
        android:text="Cancel"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/remove_button_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/save_button_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/save_cancel_bckgrnd"
        android:text="Save"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/remove_button_new"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>