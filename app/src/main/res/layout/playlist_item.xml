<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/homeSong2"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/homeSong1"
    android:background="@drawable/_bg__mobile_dashboard_ek2_shape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:layout_width="180dp"
        android:id="@+id/grid"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="17dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    <ImageView
        android:id="@+id/playlistPhoto1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
        android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
        <ImageView
            android:id="@+id/playlistPhoto2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
            android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
            android:id="@+id/playlistPhoto3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
            android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <ImageView
            android:id="@+id/playlistPhoto4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
            android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </GridLayout>

    <TextView
        android:id="@+id/playlistdescrp"
        android:layout_width="199dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="148dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/grid"
        app:layout_constraintTop_toBottomOf="@+id/playlistName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/playlistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/grid"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="1dp"
        android:background="@color/home_ek2_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></View>
</androidx.constraintlayout.widget.ConstraintLayout>