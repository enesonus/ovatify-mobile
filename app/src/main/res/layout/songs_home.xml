<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/_bg__mobile_dashboard_ek2_shape" >
<RelativeLayout
android:id="@+id/album1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginStart="21dp"
android:layout_marginTop="30dp">

<ImageView
    android:id="@+id/album1_photo"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:contentDescription="unsplash_zcqjx2_z4sm_ek1"
    android:src="@drawable/unsplash_zcqjx2_z4sm_ek1" />

<TextView
    android:id="@+id/album1_name"
    android:layout_width="131.1dp"
    android:layout_height="16.1dp"
    android:layout_gravity="center_horizontal|center"
    android:layout_marginLeft="0.5dp"
    android:layout_marginTop="139dp"
    android:gravity="center"
    android:text="@string/_1989__taylor_s_version__ek1_string"
    android:textColor="@color/home_ek2_color"
    android:textSize="11sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/album1_artist"
    android:layout_width="113.1dp"
    android:layout_height="16.1dp"
    android:layout_gravity="center_horizontal|center"
    android:layout_marginLeft="9.5dp"
    android:layout_marginTop="161dp"
    android:gravity="center"
    android:text="@string/album___taylor_swift_ek1_string"
    android:textColor="@color/home_ek2_color"
    android:textSize="11sp" />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/album2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/album2_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="unsplash_zcqjx2_z4sm_ek1"
            android:src="@drawable/unsplash_zcqjx2_z4sm_ek1" />

        <TextView
            android:id="@+id/album2_name"
            android:layout_width="131.1dp"
            android:layout_height="16.1dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="139dp"
            android:gravity="center"
            android:text="@string/_1989__taylor_s_version__ek1_string"
            android:textColor="@color/home_ek2_color"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/album2_artist"
            android:layout_width="113.1dp"
            android:layout_height="16.1dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="9.5dp"
            android:layout_marginTop="161dp"
            android:gravity="center"
            android:text="@string/album___taylor_swift_ek1_string"
            android:textColor="@color/home_ek2_color"
            android:textSize="11sp" />

    </RelativeLayout>

    ></LinearLayout>