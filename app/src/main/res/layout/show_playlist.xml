<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_bg__mobile_dashboard_ek2_color"
    >


    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="70.25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:clipToOutline="true"
        android:background="#0D0909"
        tools:ignore="MissingConstraints"
        >

        <TextView
            android:id="@+id/Music_info_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:text="Playlist Info"
            android:textColor="@color/home_ek2_color"
            android:textSize="24dp" />

        <RelativeLayout
            android:id="@+id/group_2049"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="11dp">


            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:src="@drawable/icon"></ImageView>


        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Edit_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Edit_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:text="Edit"
            android:textColor="@color/home_ek2_color"
            android:textSize="20sp"
            ></TextView>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/prbar_playlis_tinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar" />


    <RelativeLayout
        android:id="@+id/playlist2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="200dp"
            android:id="@+id/grid"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="17dp"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <ImageView
                android:id="@+id/playlistPhoto1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
                android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <ImageView
                android:id="@+id/playlistPhoto2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
                android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <ImageView
                android:id="@+id/playlistPhoto3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
                android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <ImageView
                android:id="@+id/playlistPhoto4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="unsplash_zcqjx2_z4sm_ek2"
                android:src="@drawable/unsplash_zcqjx2_z4sm_ek2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </GridLayout>

        <EditText
            android:id="@+id/playlistname"
            android:layout_width="270.1dp"
            android:layout_height="40.1dp"
            android:enabled="false"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="205dp"
            android:text="Sanctuary In Dying Light"
            android:textColor="@color/home_ek2_color"
            android:backgroundTint="@android:color/transparent"
            android:textSize="19sp" />

        <EditText
            android:enabled="false"
            android:id="@+id/playlistdescrp"
            android:layout_width="170dp"
            android:layout_marginStart="210dp"
            android:layout_height="200dp"
            android:textSize="15sp"
            android:textColor="@color/home_ek2_color"
            android:text="Description" />


    </RelativeLayout>

    <Button
        android:id="@+id/Cancel_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="270dp"
        android:layout_marginBottom="30dp"
        android:text="Cancel"
        android:textColor="@color/home_ek2_color"
        android:background="@drawable/save_cancel_bckgrnd"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </Button>

    <Button
        android:id="@+id/add_song_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="276dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/save_cancel_bckgrnd"
        android:text="Add Song"
        android:visibility="visible"
        android:textColor="@color/home_ek2_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview_playlist_song"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginBottom="12dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/Cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>